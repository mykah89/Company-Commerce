@model Company.Commerce.Web.ViewModels.General.ContactUsViewModel

@section pagetitle
{
    <div class="row">
        <div id="page-title" class="col-md-12">
            <h2><i class="fa fa-location-arrow"></i>Contact&nbsp;<small>Information</small></h2>
            <hr />
        </div>
    </div>
}

<!-- Page content -->
<div id="contact-home">
    <!-- Google Map -->
    <div class="row text-center">
        <iframe class="google-map" width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=buffalo+new+york&amp;aq=&amp;sll=42.886447,-78.878369&amp;sspn=0.216587,0.445976&amp;ie=UTF8&amp;hq=&amp;hnear=Buffalo,+Erie,+New+York&amp;t=m&amp;z=12&amp;ll=42.886447,-78.878369&amp;output=embed"></iframe>
    </div>

    <div class="row">
        <div class="col-md-6 col-sm-7">
            <!-- Contact form -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-mail-forward text-warning"></i>Contact Us
                </div>
                <div class="panel-body">
                    @Html.Partial("_ContactUs", Model)
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-5">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-building-o text-warning"></i>Our Address
                </div>
                <div class="panel-body">
                    <address>
                        <!-- Address -->
                        <span>@Model.BusinessAddress.AddressLine1</span>
                        @if (!String.IsNullOrEmpty(Model.BusinessAddress.AddressLine2))
                        {
                            <br />
                            <span>@Model.BusinessAddress.AddressLine2</span>
                        }
                        <br />
                        <span>@Model.BusinessAddress.City,&nbsp;</span>
                        <span>@Model.BusinessAddress.State&nbsp;</span>
                        <span>@Model.BusinessAddress.PostalCode</span>
                        <br />
                    </address>
                    @*<address>
                        <!-- Name -->
                        <span><strong>Email</strong></span>
                        <br />
                        <!-- Email -->
                        <span>
                            <a href="mailto:@(Model.BusinessAddress.Email)">
                                @Model.BusinessAddress.Email
                            </a>
                        </span>
                    </address>*@
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

