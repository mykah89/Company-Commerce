@model Project.MVC.Web.ViewModels.Account.AddNewAddressViewModel


<div class="editor-newaddress-checkout">
    <div class="col-md-12">
        <div class="form-group">
            <label class="control-label">Address</label>
            @Html.TextBoxFor(m => m.AddressLine1, new { @class = "form-control", placeholder = "Address" })
            @Html.ValidationMessageFor(m => m.AddressLine1)
        </div>
        <div class="form-group">
            <label class="control-label">Address 2</label>
            @Html.TextBoxFor(m => m.AddressLine2, new { @class = "form-control", placeholder = "Address 2" })
        </div>
    </div>
    <div class="form-group col-md-4">
        <label class="control-label">City</label>
        @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "City" })
        @Html.ValidationMessageFor(m => m.City)
    </div>
    <div class="form-group col-md-4">
        <label class="control-label">State</label>
        @Html.DropDownList("State", Html.StatesList(), "", new { @class = "form-control dropdownlist", placeholder = "State" })
        @Html.ValidationMessageFor(m => m.State)
    </div>
    <div class="form-group col-md-4">
        <label class="control-label">Postal</label>
        @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", placeholder = "Postal" })
        @Html.ValidationMessageFor(m => m.PostalCode)
    </div>
</div>
