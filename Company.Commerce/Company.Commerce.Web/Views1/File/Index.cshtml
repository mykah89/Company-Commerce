@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div>

        <div class="col-md-6">
            <h2 class="text-center">File</h2>

            @using (Html.BeginForm("Upload", "File", FormMethod.Post, new { @class = "form", role = "form", enctype = "multipart/form-data" }))
            {

                <div class="form-group">
                    <label class="control-label">File Path</label>
                    <input name="fileUpload" type="file" @*class="form-control"*@ placeholder="File" />
                    <button type="submit" value="Upload" class="btn btn-primary pull-right">Submit</button>
                </div>

            }
        </div>


    </div>
</div>
