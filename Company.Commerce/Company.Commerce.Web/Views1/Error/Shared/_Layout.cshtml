@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Page Title-->
@if (IsSectionDefined("pagetitle"))
{
    @RenderSection("pagetitle", false)
}
else
{
    <div class="row">
        <div id="page-title" class="col-md-12">
            <h2><i class="fa fa-exclamation-triangle"></i>Error&nbsp;<small>An error has occured</small></h2>
            <hr />
        </div>
    </div>
}

<div id="error-layout">
        @RenderBody()
</div>
