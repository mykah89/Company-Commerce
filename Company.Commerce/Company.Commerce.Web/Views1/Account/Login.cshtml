@model Project.MVC.Web.ViewModels.Account.LoginViewModel

@{
    Layout = "~/Views/Account/Shared/_LayoutAnonymous.cshtml";
}


<div id="login-account">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-arrow-circle-o-right text-warning"></i>Login
                    <span class="pull-right small">
                        Not yet a member?
                        <a class="text-warning small" href="@Url.Action("Register","Account")">Sign up now!</a>
                    </span>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        if (ViewBag.ReturnUrl != null)
                        {
                            @Html.Hidden("returnUrl", (String)ViewBag.ReturnUrl)
                        }

                        <h4 class="text-center">
                            @Html.ValidationSummary(true)
                        </h4>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Password, new { autocomplete = "off", @class = "form-control", placeholder = "Password", type = "password" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    Remember Me
                                </label>
                            </div>
                            <span class="forgot"><a class="text-primary" href="@Url.Action("ForgotPassword","Account")">Forgot Password?</a></span>
                            <button class="btn btn-primary pull-right">Login</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
