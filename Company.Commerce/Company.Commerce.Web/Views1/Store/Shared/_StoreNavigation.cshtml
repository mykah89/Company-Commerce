@model Project.MVC.Entity.Models.Category


<div id="storenavigation-store">
    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-pills nav-stacked">
                @if (Model.CategoryID != 0)
                {
                    <li class="active"><a href="@Url.Action("Category", "Store", new { categoryID = Model.CategoryID })">@Model.CategoryName</a></li>
                }
                else
                {
                    <li class="active"><a>@Model.CategoryName</a></li>
                }

                @if (Model.ChildCategories.Any())
                {

                    foreach (var subCategory in Model.ChildCategories)
                    {
                        <li><a href="@Url.Action("Category", "Store", new { categoryID = @subCategory.CategoryID })">@subCategory.CategoryName</a></li>
                    }
                }
            </ul>
        </div>
    </div>
</div>

