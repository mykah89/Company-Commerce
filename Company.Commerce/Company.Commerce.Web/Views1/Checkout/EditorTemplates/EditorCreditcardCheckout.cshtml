@model Project.MVC.Web.ViewModels.Checkout.CreditCardPaymentViewModel

<div class="editor-creditcard-checkout">
    <div class="form-group col-md-4">
        @Html.LabelFor(m => m.CreditCardNumber, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.CreditCardNumber, new { @class = "form-control", placeholder = "Card #" })
        @Html.ValidationMessageFor(m => m.CreditCardNumber)
    </div>

    <div class="form-group col-md-3">
        <label class="control-label">Exp.</label>
        @Html.DropDownListFor(m => m.ExpirationMonth, Html.MonthsSelectList(), "", new { @class = "form-control dropdownlist", placeholder = "MM" })
        @Html.ValidationMessageFor(m => m.ExpirationMonth)
    </div>
    <div class="form-group col-md-3">
        <label class="control-label invisible">Exp</label>
        @Html.DropDownListFor(m => m.ExpirationYear, Html.YearsSelectList(), "", new { @class = "form-control dropdownlist", placeholder = "YY" })
        @Html.ValidationMessageFor(m => m.ExpirationYear)
    </div>
