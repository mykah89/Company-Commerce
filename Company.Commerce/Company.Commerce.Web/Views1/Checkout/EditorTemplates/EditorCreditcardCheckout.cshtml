            @Html.LabelFor(m => m.ExpirationDate, new { @class = "control-label" })
            @Html.EditorFor(m => m.ExpirationDate, new { @class = "form-control" })
            @Html.TextBoxFor(m => m.ExpirationDate, new { @class = "form-control", placeholder = "Expiration" })
            @Html.ValidationMessageFor(m => m.ExpirationDate)
        </div>*@
    <div class="form-group col-md-2">
        @Html.LabelFor(m => m.CVV, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.CVV, new { @class = "form-control", placeholder = "Cvv" })
        @Html.ValidationMessageFor(m => m.CVV)
    </div>
</div>
