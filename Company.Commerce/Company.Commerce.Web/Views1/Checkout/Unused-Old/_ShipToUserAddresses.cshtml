@model List<Project.MVC.Web.ViewModels.General.AddressViewModel>

@if (Model.Any())
{
    <div class="col-md-12">
        <h4><b>Select an existing address</b></h4>
        @foreach (var address in Model)
        {
            <div class="col-md-3 item">
                @Html.DisplayFor(m => address, "AddressCheckout")
                <button class="btn btn-primary" type="submit"
                        name="@((String)ViewBag.ContainerPrefix + "SelectedShippingAddressId")" value="@address.AddressID">
                    Ship Here
                </button>
            </div>
        }
    </div>

    <div class="clearfix">
    </div>

    <hr />
}


