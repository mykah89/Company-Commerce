@model Project.MVC.Web.ViewModels.Checkout.CreditCardPaymentViewModel

<div class="row">
    <div class="form-group">
        @Html.LabelFor(m => m.CreditCardNumber, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CreditCardNumber, new { @class = "form-control", placeholder = "Credit Card #" })
            @Html.ValidationMessageFor(m => m.CreditCardNumber)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ExpirationDate, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.ExpirationDate, new { @class = "form-control", placeholder = "ex: MMYY" })
            @Html.ValidationMessageFor(m => m.ExpirationDate)
        </div>
        @Html.LabelFor(m => m.CVV, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.CVV, new { @class = "form-control", placeholder = "3 Digit Cvv" })
            @Html.ValidationMessageFor(m => m.CVV)
        </div>
    </div>
</div>
