@model Project.MVC.Web.ViewModels.Checkout.GiftCardPaymentViewModel

@{
    var rowGuid = Guid.NewGuid().ToString("N");
}


<div class="display-giftcard-checkout form" data-rowid="@rowGuid">
    @using (Html.BeginCollectionItem("GiftCardPayments"))
    {
        <div class="form-group col-md-5">
            @*@Html.LabelFor(m => m.GiftCardNumber, new { @class = "control-label" })*@
            @Html.TextBoxFor(m => m.GiftCardNumber, new { @class = "form-control", data_attribute = "GiftCardNumber", placeholder = "Card #", @readonly = "readonly" })
        </div>
        <div class="form-group col-md-3">
            @*@Html.LabelFor(m => m.GiftCardPin, new { @class = "control-label" })*@
            @Html.TextBoxFor(m => m.GiftCardPin, new { @class = "form-control", data_attribute = "GiftCardPin", placeholder = "Pin", @readonly = "readonly" })
        </div>
        <div class="form-group col-md-3">
            @*<label class="control-label">Balance</label>*@
            <input type="text" class="form-control" readonly="readonly" value="@Html.CurrencyFormatter(Model.Balance)" />
        </div>
        <div class="form-group col-md-1">
            <a id="btn-remove" data-rowid="@rowGuid" class="btn btn-danger"><i class="fa fa-minus"></i></a>
        </div>
    }
</div>
